# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
max_line_length = 100
quote_type = single
jsx_quote_type = single
semi = true
trailing_comma = true
bracket_same_line = false
arrow_parens = always
